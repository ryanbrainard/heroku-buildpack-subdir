#!/usr/bin/env bash

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

BUILD_SUBDIR=$(cat ${ENV_DIR}/BUILD_SUBDIR)

if [[ -z "${BUILD_SUBDIR}" ]]; then
    echo "BUILD_SUBDIR was not set. Aborting" | indent
    exit 1
fi

cd ${BUILD_DIR}/${BUILD_SUBDIR}

if ! [ $? ]; then
    echo "FAILED to change to ${BUILD_SUBDIR}" | indent
    exit 1
fi

echo "Changed to ${BUILD_SUBDIR} as build dir successfully" | indent
